{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Echo",
  "version": "0.2.0",
  "identifier": "com.echo.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Echo",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:* https://gitee.com https://github.com; media-src 'self' http://localhost:* http://127.0.0.1:* blob:; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/echo-backend"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English", "SimpChinese"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://gitee.com/KaUpane/echo/releases/download/latest/latest.json",
        "https://github.com/Mtrya/echo/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCRTY3MzQ1QjM3MkZGMkUKUldRdS8zS3pSWFBteThzVThCK0REZkNDT0ZucUdvb2FjVGQ2NWVrSTJXL2JzVytmZ3V0YThNY0YK"
    }
  }
}
